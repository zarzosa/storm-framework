{
  "path": {
    "source": "src",
    "distribution": "dist",
    "build": "build",
    "styles":  {
      "source": "/styles",
      "distribution": "/css"
    },
    "scripts": {
      "source": "/scripts",
      "distribution": "/js"
    },
    "pages": {
      "source": "/pages",
      "distribution": ""
    },
    "images": {
      "source": "/images",
      "distribution": "/images"
    }
  },
  "styles": {
    "sass": {
      "outputStyle" : "nested",
      "includePaths" : [
				"bower_components/sassy-maps/sass",
				"bower_components/normalize-css",
				"bower_components/bourbon/app/assets/stylesheets",
				"bower_components/neat/core",
				"bower_components/bitters/core"
	     ]
    },
    "autoprefixer": {
      "browsers": ["last 2 versions"],
      "cascade": false
    },
    "cleancss": {
      "keepBreaks": false
    }
  },
  "pages": {
    "htmlmin": {
      "collapseWhitespace": true
    }
  },
  "sync": {
    "enabled": true,
    "browserSync": {
      "options": {
        "port": 3000,
        "ui": {
          "port": 3001
        }
      }
    }
  }
}
